<Window x:Class="WpfCalculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculadora"
        mc:Ignorable="d"
        Title="Calculadora POO2" Height="538" Width="416"
        Background="Black"
        ResizeMode="CanMinimize"
        >

    <Grid>

        <Grid Margin="2,2,2,410" 
                x:Name="visorGrid" 
                Background="#FF1D1D1D"
                >

            <TextBox x:Name="txtHistorico"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Width="397"
                        Height="50"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        VerticalContentAlignment="Top"
                        TextWrapping="NoWrap"
                        Margin="0,12,10,0"
                        FontSize="15"
                        TextAlignment="Right"
                        Foreground="LightGray"
                        IsReadOnly="True"
                        >

            </TextBox>

            <TextBox x:Name="txtVisor"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    FontSize="35"
                    FontFamily="Arial"
                    Foreground="White"
                    Padding="5,5,20,5"
                    Panel.ZIndex="1"
                    TextAlignment="Center"
                    IsReadOnly="True"
                    >
                0
            </TextBox>

        </Grid>

        <Grid Margin="0,91,0,0" x:Name="buttonsGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,2" Grid.Row="0" Grid.Column="0">
                <Button x:Name="btnPorcent"
                        Content="%" 
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial" Click="btnPorcent_Click" 
                        >
                </Button>
            </Border>
            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="0" Grid.Column="1">
                <Button x:Name="btnCE"
                        Content="CE" 
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial" Click="btnCE_Click"
                        >
                </Button>
            </Border>
            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="0" Grid.Column="2">
                <Button x:Name="btnC"
                        Content="C" 
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial" Click="btnC_Click"
                        >
                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,3,2" Grid.Row="0" Grid.Column="3">
                <Button x:Name="btnDeletar"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial" HorizontalAlignment="Right" Width="101" Click="btnDeletar_Click"
                        >
                    <Image Source="C:\Users\Família\source\repos\WpfCalculadora\imagens\excluir.png" 
                           Width="25" 
                           Height="25"/>
                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,2" Grid.Row="1" Grid.Column="0">
                <Button x:Name="btnFracao"
                        FontSize="28" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="½" Click="btnFracao_Click"
                        >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,2" Grid.Row="2" Grid.Column="0">
                <Button x:Name="btnSete"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="7" Click="btnSete_Click"
                        >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,2" Grid.Row="3" Grid.Column="0">
                <Button x:Name="btnQuatro"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="4" Click="btnQuatro_Click"
                        >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,2" Grid.Row="4" Grid.Column="0">
                <Button x:Name="btnUm"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="1" Click="btnUm_Click"
                        >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,3" Grid.Row="5" Grid.Column="0">
                <Button x:Name="btnMaisOuMenos"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="+/-" HorizontalAlignment="Right" Width="99" Click="btnMaisOuMenos_Click"
                        >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="1" Grid.Column="1">
                <Button x:Name="btnPotencia"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="X²" Click="btnPotencia_Click"
                        >

                </Button>
            </Border>
            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="2" Grid.Column="1">
                <Button x:Name="btnOito"
                     FontSize="26" 
                     Foreground="White" 
                     BorderThickness="0"
                     Background="Transparent"
                     FontFamily="Arial"
                     Content="8" Click="btnOito_Click"
                     >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="3" Grid.Column="1">
                <Button x:Name="btnCinco"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="5" Click="btnCinco_Click"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="4" Grid.Column="1">
                <Button x:Name="btnDois"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="2" Click="btnDois_Click"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,3" Grid.Row="5" Grid.Column="1">
                <Button x:Name="btnZero"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="0" Click="btnZero_Click"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="1" Grid.Column="2">
                <Button x:Name="btnRaiz"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="²√x" Click="btnRaiz_Click"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="2" Grid.Column="2">
                <Button x:Name="btnNove"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="9" Click="btnNove_Click"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="3" Grid.Column="2">
                <Button x:Name="btnSeis"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="6" Click="btnSeis_Click"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="4" Grid.Column="2">
                <Button x:Name="btnTres"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="3" Click="btnTres_Click"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,3" Grid.Row="5" Grid.Column="2">
                <Button x:Name="btnVirgula"
                          FontSize="30" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          BorderThickness="0"
                          Background="Transparent"
                          FontFamily="Arial"
                          Content="," Height="67" Click="btnVirgula_Click"
                          >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,3,2" Grid.Row="1" Grid.Column="3">
                <Button x:Name="btnDividir"
                          FontSize="26" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          BorderThickness="0"
                          Background="Transparent"
                          FontFamily="Arial"
                          Content="/" Click="btnDividir_Click" Height="68"
                          >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,3,2" Grid.Row="2" Grid.Column="3">
                <Button x:Name="btnMultiplica"
                       FontSize="26" 
                       Foreground="White" 
                       BorderThickness="0"
                       Background="Transparent"
                       FontFamily="Arial"
                       Content="x" Click="btnMultiplica_Click"
                       >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,3,2" Grid.Row="3" Grid.Column="3">
                <Button x:Name="btnMenos"
                       FontSize="45" 
                       Foreground="White" 
                       BorderThickness="0"
                       Background="Transparent"
                       FontFamily="Arial"
                       Content="-" Click="btnMenos_Click"
                       >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,3,2" Grid.Row="4" Grid.Column="3">
                <Button x:Name="btnMais"
                       FontSize="30" 
                       Foreground="White" 
                       BorderThickness="0"
                       Background="Transparent"
                       FontFamily="Arial"
                       Content="+" Click="btnMais_Click"
                       >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF16B320" Margin="0,2,3,3" Grid.Row="5" Grid.Column="3">
                <Button x:Name="btnCalcular"
                       FontSize="30" 
                       Foreground="White" 
                       BorderThickness="0"
                       Background="Transparent"
                       FontFamily="Arial"
                       Content="=" Click="btnCalcular_Click"
                       >

                </Button>
            </Border>

        </Grid>
    </Grid>
</Window>
