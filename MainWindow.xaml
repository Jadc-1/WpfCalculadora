<Window x:Class="WpfCalculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculadora"
        mc:Ignorable="d"
        Title="Calculadora POO2" Height="527" Width="416"
        Background="Black">
    <Grid>
        <Border Background="#FF1D1D1D" Margin="2,2,2,420" CornerRadius="10">
            <Grid Margin="2,2,2,420" 
                  x:Name="visorGrid" 
                  Background="Transparent"
                  >
                
                <TextBox x:Name="txtVisor"
                         Background="Transparent"
                         BorderBrush="Transparent"
                         VerticalAlignment="Bottom"
                         HorizontalAlignment="Right"
                         FontSize="40"
                         FontFamily="Arial"
                         Foreground="White"
                         Padding="5,5,20,5"
                         >

                </TextBox>
                
            </Grid>
        </Border>
        <Grid Margin="0,91,0,0" x:Name="buttonsGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,2" Grid.Row="0" Grid.Column="0">
                <Button x:Name="btnPorcent"
                        Content="%" 
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        >
                </Button>
            </Border>
            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="0" Grid.Column="1">
                <Button x:Name="btnCE"
                        Content="CE" 
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        >
                </Button>
            </Border>
            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="0" Grid.Column="2">
                <Button x:Name="btnC"
                        Content="C" 
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        >
                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,3,2" Grid.Row="0" Grid.Column="3">
                <Button x:Name="btnDeletar"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        >
                    <Image Source="C:\Users\Família\source\repos\WpfCalculadora\imagens\excluir.png" 
                           Width="25" 
                           Height="25"/>
                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,2" Grid.Row="1" Grid.Column="0">
                <Button x:Name="btnFracao"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="x/2"
                        >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,2" Grid.Row="2" Grid.Column="0">
                <Button x:Name="btnSete"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="7"
                        >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,2" Grid.Row="3" Grid.Column="0">
                <Button x:Name="btnQuatro"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="4"
                        >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,2" Grid.Row="4" Grid.Column="0">
                <Button x:Name="btnUm"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="1"
                        >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="3,2,2,3" Grid.Row="5" Grid.Column="0">
                <Button x:Name="btnMaisOuMenos"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="+/-"
                        >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="1" Grid.Column="1">
                <Button x:Name="btnPotencia"
                        FontSize="26" 
                        Foreground="White" 
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Arial"
                        Content="X²"
                        >

                </Button>
            </Border>
            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="2" Grid.Column="1">
                <Button x:Name="btnOito"
                     FontSize="26" 
                     Foreground="White" 
                     BorderThickness="0"
                     Background="Transparent"
                     FontFamily="Arial"
                     Content="8"
                     >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="3" Grid.Column="1">
                <Button x:Name="btnCinco"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="5"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="4" Grid.Column="1">
                <Button x:Name="btnDois"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="2"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,3" Grid.Row="5" Grid.Column="1">
                <Button x:Name="btnZero"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="0"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="1" Grid.Column="2">
                <Button x:Name="btnRaiz"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="²√x"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="2" Grid.Column="2">
                <Button x:Name="btnNove"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="9"
                         >  

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="3" Grid.Column="2">
                <Button x:Name="btnSeis"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="6"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,2" Grid.Row="4" Grid.Column="2">
                <Button x:Name="btnTres"
                         FontSize="26" 
                         Foreground="White" 
                         BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Arial"
                         Content="3"
                         >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,2,3" Grid.Row="5" Grid.Column="2">
                <Button x:Name="btnVirgula"
                          FontSize="30" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          BorderThickness="0"
                          Background="Transparent"
                          FontFamily="Arial"
                          Content=","
                          >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,3,2" Grid.Row="1" Grid.Column="3">
                <Button x:Name="btnDividir"
                          FontSize="26" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          BorderThickness="0"
                          Background="Transparent"
                          FontFamily="Arial"
                          Content="/"
                          >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,3,2" Grid.Row="2" Grid.Column="3">
                <Button x:Name="btnMultiplica"
                       FontSize="26" 
                       Foreground="White" 
                       BorderThickness="0"
                       Background="Transparent"
                       FontFamily="Arial"
                       Content="X"
                       >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,3,2" Grid.Row="3" Grid.Column="3">
                <Button x:Name="btnMenos"
                       FontSize="30" 
                       Foreground="White" 
                       BorderThickness="0"
                       Background="Transparent"
                       FontFamily="Arial"
                       Content="−"
                       >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF292626" Margin="0,2,3,2" Grid.Row="4" Grid.Column="3">
                <Button x:Name="btnMais"
                       FontSize="30" 
                       Foreground="White" 
                       BorderThickness="0"
                       Background="Transparent"
                       FontFamily="Arial"
                       Content="+"
                       >

                </Button>
            </Border>

            <Border CornerRadius="10" Background="#FF16B320" Margin="0,2,3,3" Grid.Row="5" Grid.Column="3">
                <Button x:Name="btnCalcular"
                       FontSize="30" 
                       Foreground="White" 
                       BorderThickness="0"
                       Background="Transparent"
                       FontFamily="Arial"
                       Content="="
                       >

                </Button>
            </Border>

        </Grid>
    </Grid>
</Window>
